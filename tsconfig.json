{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 17",
    "compilerOptions": {
        "lib": [
            "es2022"
        ],
        "module": "commonjs",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "rootDir": "src", 
        "outDir": "./bin",
        "sourceMap": true
    }
}